</template>

<script>
	export default {
		data() {
			return {
				list: [],
				badgeList: [],
				swiperList: [],
				swiperCurrent: 0
			}
		},
		onLoad() {
			//æ™®é€šæƒ…å†µæ•°ç»„
			const list = [];
			for(let i = 0;i < 10;i++) {
				list.push('tab' + (i + 1));
			}
			this.list = list;
			
			//è‡ªå®šä¹‰å¾½æ ‡æ•°æ•°ç»„
			const badgeList = [];
			for(let i = 0;i < 10;i++) {
				if(i !== 2){
					badgeList.push({
						name: 'tab' + (i + 1),
					});
				}else {
					badgeList.push({
						name: 'tab' + (i + 1),
						badge: {
							count: 6
						}
					});
				}
			}
			this.badgeList = badgeList;
			
			//ä¸swiperè”åŠ¨æ•°ç»„
			const swiperList = [];
			for(let i = 0;i < 4;i++) {
				swiperList.push({
					name: 'tab' + (i + 1),
					color: this._getRandomColor()
				});
			}
			this.swiperList = swiperList;
		},
		methods: {
			//tabsé€šçŸ¥swiperåˆ‡æ¢
			tabsChange(index) {
				this.swiperCurrent = index;
			},
			//swiper changeæ—¶è§¦å‘
			swiperChange(e) {
				// #ifndef APP-PLUS || H5 || MP-WEIXIN || MP-QQ
				let current = e.target.current || e.detail.current;
				this.tabsChange(current);
				// #endif
			},
			//swiperæ»‘åŠ¨ä¸­
			swiperTransition(e) {
				this.$refs.tabs.setDx(e.detail.dx);
			},
			//swiperæ»‘åŠ¨ç»“æŸ
			swiperAnimationfinish(e) {
				this.swiperCurrent = e.detail.current;
				this.$refs.tabs.unlockDx();
			},
			
			// ç”Ÿæˆéšæœºé¢œè‰²
			_getRandomColor() {
				const rgb = [];
				for (let i = 0; i < 3; ++i) {
					let color = Math.floor(Math.random() * 256).toString(16)
					color = color.length == 1 ? '0' + color : color
					rgb.push(color)
				}
				return '#' + rgb.join('');
			}
		}
	}
</script>

